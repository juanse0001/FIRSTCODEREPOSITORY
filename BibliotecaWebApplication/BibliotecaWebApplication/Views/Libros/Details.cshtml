@model BibliotecaWebApplication.Models.Libro

@{
    ViewData["Title"] = "Detalles del Libro";
}

<h1>Detalles del Libro</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroPaginas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPaginas)
        </dd>
    </dl>
</div>

<div class="row mt-3">
    <h4>Autores del Libro</h4>
    <ul class="list-group list-group-flush">
        @if (Model.LibroAutores.Any())
        {
            foreach (var autorlibro in Model.LibroAutores)
            {
                <li class="list-group-item d-flex align-items-center">
                    <span class="badge text-primary me-2">
                        <i class="bi bi-person"></i>
                    </span>
                    @autorlibro.Autor.Nombres @autorlibro.Autor.Apellidos
                </li>
            }
        }
        else
        {
            <li class="list-group-item">Este libro no tiene autores asociados.</li>
        }
    </ul>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.LibroId" class="btn btn-sm btn-warning me-2">
        <i class="bi bi-pencil-square"></i> Editar
    </a>

    <a asp-action="Index" class="btn btn-sm btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
</div>
