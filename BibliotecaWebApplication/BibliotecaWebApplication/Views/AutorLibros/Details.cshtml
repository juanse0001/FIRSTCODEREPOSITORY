@model BibliotecaWebApplication.Models.AutorLibro

@{
    ViewData["Title"] = "Detalles de la Relación Autor-Libro";
}

<h1>Detalles de la Relación Autor-Libro</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor.Nombres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libro.Titulo)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-autorId="@Model.AutorId" asp-route-libroId="@Model.LibroId" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>