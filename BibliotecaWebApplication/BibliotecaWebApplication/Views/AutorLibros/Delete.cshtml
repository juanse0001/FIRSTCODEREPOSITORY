@model BibliotecaWebApplication.Models.AutorLibro

@{
    ViewData["Title"] = "Eliminar Relación";
}

<h1>Eliminar Relación</h1>

<div class="alert alert-success" role="alert" style="display:none;" id="successMessage">
    @TempData["SuccessMessage"]
</div>
<div class="alert alert-danger" role="alert" style="display:none;" id="errorMessage">
    @TempData["ErrorMessage"]
</div>

<p>
    ¿Está seguro de que desea eliminar esta relación?
</p>

<div class="mb-3">
    <strong>Autor:</strong> @Model.Autor.Nombres @Model.Autor.Apellidos<br />
    <strong>Libro:</strong> @Model.Libro.Titulo
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AutorId" />
    <input type="hidden" asp-for="LibroId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

